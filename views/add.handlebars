<div class="container">
  {{#if message}}
    <div class="alert alert-{{status}}">{{{message}}}</div>
  {{/if}}
  <form method="POST">

    <h1 class="h4 mb-3 fw-normal">Add student.</h1>

    <div class="form-floating">
      <input
        value="{{formInfo.name}}"
        type="text"
        name="name"
        class="form-control"
        id="floatingInput"
        placeholder="Name"
      />
      <label for="floatingInput">Name</label>
    </div>
    <br />
    <div class="form-floating">
      <input
        value="{{formInfo.lastName}}"
        type="text"
        name="lastName"
        class="form-control"
        id="floatingPassword"
        placeholder="Last Name"
      />
      <label for="floatingPassword">Last Name</label>
    </div>
    <br />
    <div class="form-floating">
      <input
        value="{{formInfo.adress}}"
        type="text"
        name="adress"
        class="form-control"
        id="floatingInput"
        placeholder="Adress"
      />
      <label for="floatingInput">Adress</label>
    </div>
    <br />
    <div class="form-floating">
      <input
        value="{{formInfo.phone}}"
        type="number"
        name="phone"
        class="form-control"
        id="floatingInput"
        placeholder="Phone number"
      />
      <label for="floatingInput">Phone number</label>
    </div>
    <br />
    <div class="form-floating">
      <input
        value="{{formInfo.email}}"
        type="email"
        name="email"
        class="form-control"
        id="floatingInput"
        placeholder="e@mail"
      />
      <label for="floatingInput">e@mail</label>
    </div>
    <br />
    <div class="form-floating">
      <input
        value="{{formInfo.SocNumb}}"
        type="number"
        name="SocNumb"
        class="form-control"
        id="floatingInput"
        placeholder="Soc.Sec Numb"
      />
      <label for="floatingInput">Soc.Sec Numb</label>
    </div>
    <br />
    <button class="w-100 btn btn-lg btn-success" type="submit">Add</button>
  </form>
  <a href="/list">
    <button class="btn btn-danger">View students list</button>
  </a>
</div>